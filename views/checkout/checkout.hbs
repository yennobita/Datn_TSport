{{#if errorListProduct}}
<script>
    async function errorListProduct() {
        $("#notify").html(`Danh sánh đặt hàng trống!!`)
        $('#notification').modal('show');
        return true;
    }
    function fixHtml() {
        $("#notify").html(`Bạn chờ chút nhé!`)
    }
    errorListProduct();
</script>
{{/if}}

{{#if errorNumberPhone}}
<script>
    async function errorNumberPhone() {
        $("#notify").html(`Bạn nhập sai số điện thoại!!`)
        $('#notification').modal('show');
        return true;
    }
    function fixHtml() {
        $("#notify").html(`Bạn chờ chút nhé!`)
    }
    errorNumberPhone();
</script>

{{/if}}

{{/section}}