<!-- Breadcrumb Section Begin -->
<section class="bread-crumb mb-3">
	<span class="crumb-border"></span>
	<div class="container">
		<div class="row">
			<div class="col-12 a-left">
				<ul class="breadcrumb m-0 px-0">
					<li>
						<a href="/" target="_self"><span>Trang chủ</span></a>
						<span class="mr_lr">&nbsp;/&nbsp;</span>
					</li>

					<li class="active">
						<span>Danh sách bài viết</span>
					</li>

				</ul>
			</div>
		</div>
	</div>
</section>


<div class="container">


	<!-- Begin List Posts
	================================================== -->
	<section class="recent-posts">
		<div class="section-title">
			<h2><span>Danh sách bài viết</span></h2>
		</div>
		<div class="card-columns listrecent">



			{{#each blogs}}
			<!-- begin post -->
			<div class="card">
				<a href="/blog/{{this._id}}">
					<img class="img-fluid" src="/img/blog/{{this.image}}" alt="{{this.title}}"
						style="width: 100%; height:200px; object-fit: cover">
				</a>
				<div class="card-block">
					<h2 class="card-title" style="font-size: 18px;"><a href="/blog/{{this._id}}">{{this.title}}</a></h2>
					<h4 class="card-text">{{this.truncatedContent}}</h4>
					<div class="metafooter">
						<div class="wrapfooter">
							<span class="meta-footer-thumb">
								<a href="author.html"><img class="author-thumb"
										src="https://www.gravatar.com/avatar/e56154546cf4be74e393c62d1ae9f9d4?s=250&amp;d=mm&amp;r=x"
										alt="Sal"></a>
							</span>
							<span class="author-meta">
								<span class="post-name"><a href="#">{{this.author}}</a></span><br />
								<span class="post-date">{{this.formattedDate}}</span><span class="dot"></span><span
									class="post-read"></span>
							</span>
							<span class="post-read-more"><a href="/blog/{{this._id}}" title="Read Story"><svg
										class="svgIcon-use" width="25" height="25" viewbox="0 0 25 25">
										<path
											d="M19 6c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v14.66h.012c.01.103.045.204.12.285a.5.5 0 0 0 .706.03L12.5 16.85l5.662 4.126a.508.508 0 0 0 .708-.03.5.5 0 0 0 .118-.285H19V6zm-6.838 9.97L7 19.636V6c0-.55.45-1 1-1h9c.55 0 1 .45 1 1v13.637l-5.162-3.668a.49.49 0 0 0-.676 0z"
											fill-rule="evenodd"></path>
									</svg></a></span>
						</div>
					</div>
				</div>
			</div>
			<!-- end post -->

			{{/each}}

		</div>
	</section>
	<!-- End List Posts
	================================================== -->

</div>